//---------------------------------------------------------------------------


#pragma hdrstop

#include "DMV_Test.h"
#include "FMV_Login.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma classgroup "Vcl.Controls.TControl"
#pragma link "VCL_NNConfig"
#pragma link "VCL_NNDmRes"
#pragma link "VCL_NNRightsManager"
#pragma resource "*.dfm"
TdmvTest *dmvTest;
//---------------------------------------------------------------------------
__fastcall TdmvTest::TdmvTest(TComponent* Owner)
  : inherited( Owner )
{
}
//---------------------------------------------------------------------------

void __fastcall TdmvTest::dmvResCreate(TObject *Sender)
{
  fmvLogin = new TfmvLogin( Application );
  fmvLogin->frmLogin->Connection = conTest;

  if ( fmvLogin->ShowModal() != mrOk )
    Application->Terminate();

  fmvLogin->coRes->Enabled = conTest->Connected;
}
//---------------------------------------------------------------------------

