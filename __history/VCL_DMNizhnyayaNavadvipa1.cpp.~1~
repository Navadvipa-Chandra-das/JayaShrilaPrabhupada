//---------------------------------------------------------------------------

void __fastcall TdmvNizhnyayaNavadvipa1::dmvResCreate( TObject *Sender )
{
  fmvLogin = new TfmvLogin( Application );
  fmvLogin->frmLogin->Connection = conDB;

  if ( fmvLogin->ShowModal() != mrOk )
    Application->Terminate();

  fmvLogin->coRes->Enabled = conDB->Connected;
}
