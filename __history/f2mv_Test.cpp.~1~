#pragma resource "*.dfm"
TfmTestVCL *fmTestVCL;
//---------------------------------------------------------------------------
__fastcall TfmTestVCL::TfmTestVCL(TComponent* Owner)
	: inherited(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TfmTestVCL::FormKeyPress(TObject *Sender, System::WideChar &Key)
{
  switch ( Key ) {
    case VK_RETURN :
//      if ( Logon() ) {
//        ModalResult = mrOk;
//        Key = 0;
//      }
      break;
    case VK_ESCAPE :
      Application->Terminate();
      Key = 0;
      break;
  }
}
//---------------------------------------------------------------------------

void __fastcall TfmTestVCL::FormKeyDown(TObject *Sender, WORD &Key, TShiftState Shift)

{
  switch ( Key ) {
    case VK_RETURN :
//      if ( Logon() ) {
//        ModalResult = mrOk;
//        Key = 0;
//      }
      break;
    case VK_ESCAPE :
      Application->Terminate();
      Key = 0;
      break;
    case VK_F5 :
      if ( Shift.Contains( ssAlt ) ) {
        Application->Terminate();
        Key = 0;
      }
  }
}
//---------------------------------------------------------------------------

void __fastcall TfmTestVCL::Button1Click(TObject *Sender)
{
  fmvLogin = new TfmvLogin( this );
  fmvLogin->Show();
}
